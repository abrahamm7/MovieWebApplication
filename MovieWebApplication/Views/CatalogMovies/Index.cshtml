@model Task<List<Result>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Catalog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="stylesheet" href="~/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="~/fonts/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/css/pikaday.min.css">
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-dark navbar-expand-lg fixed-top bg-white portfolio-navbar gradient">
        <div class="container">
            <a class="navbar-brand logo" href="#">Movies</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navbarNav"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                 id="navbarNav">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item" role="presentation">@Html.ActionLink("Catalog", "Index", "CatalogMovies")</li>
                    <li class="nav-item" role="presentation">@Html.ActionLink("Favorites", "Index", "FavoriteMovies")</li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="page projects-page">
        <section class="portfolio-block projects-cards">
            <div class="container">
                <div class="heading">
                    <h2>catalog</h2>
                </div>
                <div class="row">
                    @foreach (var item in await Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0">
                                <a href="#"><img class="card-img-top scale-on-hover" src="@item.Poster_Path" alt="Card Image"></a>
                                <div class="card-body">
                                    <h6><a href="#">@item.Title</a></h6>
                                    <p class="text-muted card-text">Rating: @item.Vote_Average</p>
                                    @Html.ActionLink("View", "DisplayDetails", "CatalogMovies",
                        new { title = item.Title, overview = item.Overview, post = item.Poster_Path, release = item.Release_Date, vote = item.Vote_Average },
                        new { @class = "btn btn-outline-primary" })
                                </div>
                            </div>
                        </div>
                     }
                </div>
            </div>
        </section>
    </main>
        <footer class="page-footer">
            <div class="container">
                <div class="links"><a href="#">About me</a><a href="#">Contact me</a><a href="#">Projects</a></div>
                <div class="social-icons"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-instagram-outline"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a></div>
            </div>
        </footer>
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/pikaday/1.6.1/pikaday.min.js"></script>
        <script src="assets/js/theme.js"></script>
</body>
</html>
